<h2 style="color: white;"><%= @category.name %></h2>
<div class="posts-index">
  <% if @posts.exists? %>
    <% @posts.each_slice(2) do |post| %>
      <div class="row">
        <% post.each do |post| %>
        <div class="col-md-6">
          <div class="post">
            <%= image_tag post.image.url, width: '100%' %>
            <div class="post-content">
              <h3><%= post.title%></h3>
              <small>Posted by <%= post.user.name %> on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p')%></small>
              <%= raw post.body.truncate(200) %>
              <%= link_to "Read More", post_path(post), class: 'btn btn-primary btn-block'%>
            </div>
          </div>
        </div>
        <%end%>
      </div>
    <%end%>
  <%else%>
  <div class="well">
    <p>No posts in this category yet</p>

  </div>
  <%end%>
</div>
